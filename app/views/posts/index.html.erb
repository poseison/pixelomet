<p id="notice"><%= notice %></p>


<h1>Posts</h1>
<%= react_component('Label', {label: 'John'}) %>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Passwd</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Img</th>
      <th>Coments</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.username %></td>
        <td><%= post.passwd %></td>
        <td><%= post.lat %></td>
        <td><%= post.long %></td>
        <td><%= image_tag "data:image/jpeg;base64,#{post.img}" %></td>
        <td><%= post.coments %></td>
        <td><%= post.metervalue %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
